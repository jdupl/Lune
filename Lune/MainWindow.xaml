<Window x:Class="Lune.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" 
        Height="480" 
        Width="800"
        WindowStyle="None"
        Icon="Images\lune.ico">
    
    <DockPanel LastChildFill="True">
        <!--top panel (Title, close, minimize maximize and window drag)-->
        <DockPanel DockPanel.Dock="Top" x:Name="topBarDisplay"/>
        <!--bottom panel (current song info, media controls)-->
        <DockPanel DockPanel.Dock="Bottom" x:Name="bottomBarDisplay"/>
        <!--Middle Panel (Library)-->
        <DockPanel x:Name="libraryDisplay"/>
    </DockPanel>
</Window>