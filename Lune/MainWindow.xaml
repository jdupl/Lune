<Window x:Class="Lune.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" 
        Height="480" 
        Width="800"
        WindowStyle="None"
        Icon="Images\lune.ico">
        <!--ResizeMode="NoResize" would allow us to get rid of the border but then we need to manually handle the resizing code-->

    <DockPanel LastChildFill="True" Style="{StaticResource RootDockStyle}">
        <!--top panel (Title, close, minimize maximize and window drag)-->
        <DockPanel x:Name="topBarDisplay" DockPanel.Dock="Top"/>
        <!--bottom panel (current song info, media controls)-->
        <TabControl x:Name="AppTab" Background="Transparent">
            <DockPanel x:Name="MainPanel" DockPanel.Dock="Bottom" LastChildFill="True">
                <DockPanel DockPanel.Dock="Bottom" x:Name="bottomBarDisplay"/>
                <DockPanel x:Name="LibraryDisplay"/>
            </DockPanel>
        </TabControl>
    </DockPanel>
</Window>