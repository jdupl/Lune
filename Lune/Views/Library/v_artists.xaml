<UserControl x:Class="Lune.Views.v_artists"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local ="clr-namespace:Lune.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid HorizontalAlignment="Stretch" Margin="7,30,2,15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <ListBox SelectionChanged="ArtistSelection" Grid.Column="0" x:Name="listB_Artists" ItemsSource="{Binding artistsDisplayed}" Style="{StaticResource LibraryListBoxStyle}" ItemContainerStyle="{StaticResource LibraryListBoxItemStyle}"/>
        <GridSplitter Grid.Column="0" Style="{StaticResource LibraryGridSplitterStyle}"/>
        <ListBox SelectionChanged="AlbumSelection" Grid.Column="1" x:Name="listB_Albums" ItemsSource="{Binding albumsDisplayed}" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Style="{StaticResource LibraryListBoxStyle}"  ItemContainerStyle="{StaticResource AlbumListBoxItemStyle}">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal"/><!--Move to style pls?-->
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>
        <GridSplitter Grid.Column="1" Style="{StaticResource LibraryGridSplitterStyle}"/>
        <!-- this is the old song container(the one under is the new one), I feel like keeping it around for a while <ListBox Grid.Column="2" x:Name="listB_Songs" ItemsSource="{Binding songsDisplayed}"/>-->
        <local:v_songs Grid.Column="2" VerticalAlignment="Stretch" />
    </Grid>
</UserControl>
