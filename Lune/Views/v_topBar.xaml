<UserControl x:Class="Lune.Views.v_topBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="300">

    <DockPanel LastChildFill="True" Margin="10,0,10,0">
        <TextBlock DockPanel.Dock="Right" VerticalAlignment="Center">
            <Hyperlink Click="TriggerMinimize" Style="{StaticResource TopBarWindowIconStyle}">0</Hyperlink>
            <Hyperlink Click="TriggerClose" Style="{StaticResource TopBarWindowIconStyle}">r</Hyperlink>
        </TextBlock>

        <DockPanel LastChildFill="True" MouseMove="TriggerMoveWindow">
            <Image DockPanel.Dock="Right" MaxHeight="40" Margin="0,0,60,0" Source="{StaticResource logo}"/>
            <StatusBar Background="Transparent"  MouseDoubleClick="TriggerMaximize">
                <TextBlock DockPanel.Dock="Left" Text="Lune" FontSize="22" Foreground="#CCCCCC"/>
            </StatusBar>
        </DockPanel>
    </DockPanel>
    
</UserControl>
